@Library("git-shared") _

pipeline {
    agent { label "bub"}

    stages{
        stage("Code"){
            steps{
                script{
                    clone("https://github.com/ErebusAJ/Expense-manager.git", "master")
                }
            }
        }

        stage("Build"){
            steps{
                script{
                    dockerBuild("aaryaj", "expense-manager", "latest")
                }
            }
        }

        stage("Test"){
            steps{
                echo "Starting build test"
                echo "Test success"
            }
        }

        stage("Push"){
            steps{
                script{
                    dockerPush("dockerCreds", "expense-manager", "latest")
                }
            }
        }

        stage("Deploy"){
            steps{
                script{
                    dockerDeploy()
                }
            }
        }
    }

    post{
        success {
            script {
                emailext(
                    to: 'dev.erebusaj@gmail.com',
                    subject: "üòº [SUCCESS] Jenkins Build: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                    body: """
                        <p>‚úÖ Build <b>#${env.BUILD_NUMBER}</b> succeeded!</p>
                        <p>Check the build details: <a href="${env.BUILD_URL}">${env.BUILD_URL}</a></p>
                    """,
                    attachLog: true
                )
            }
        }

        failure {
            script {
                emailext(
                    to: 'dev.erebusaj@gmail.com',
                    subject: "üòº [FAILED] Jenkins Build: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                    body: """
                        <p>‚ùå Build <b>#${env.BUILD_NUMBER}</b> failed!</p>
                        <p>Check the logs for details: <a href="${env.BUILD_URL}">${env.BUILD_URL}</a></p>
                    """,
                    attachLog: true
                )
            }
        }

        unstable {
            script {
                emailext(
                    to: 'dev.erebusaj@gmail.com',
                    subject: "üòº [UNSTABLE] Jenkins Build: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                    body: """
                        <p>‚ö†Ô∏è Build <b>#${env.BUILD_NUMBER}</b> is unstable!</p>
                        <p>Check the logs for details: <a href="${env.BUILD_URL}">${env.BUILD_URL}</a></p>
                    """,
                    attachLog: true
                )
            }
        }
    }
}